@model Student


<h1>Edit</h1>

<h4>Sinh Viên: @Model.FullName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edits">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" disabled class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="MathPoints" class="control-label"></label>
                <input asp-for="MathPoints" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PhysicsPoints" class="control-label"></label>
                <input asp-for="PhysicsPoints" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ChemistryPoints" class="control-label"></label>
                <input asp-for="ChemistryPoints" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ClassroomId" class="control-label"></label>
                <select asp-for="ClassroomId" class="form-control" asp-items="ViewBag.ClassroomId"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
